<% if !current_user.nil?%>
  <% if @article.user_id == current_user.id %>
    <%= link_to "記事を編集する", edit_article_path(@article.id) %>
  <% end %>
<% end %>
<div class="article-rendering">
  <h1><%= @article.title %></h1>
  <vue-markdown id='article_content'><%= @article.content%></vue-markdown>
</div>

<%= javascript_pack_tag 'content_vue'%>
