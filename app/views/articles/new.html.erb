<div id="article-rendering">
  <h1>記事を書く</h1>

  <%= form_for(@article) do |f|  %>
    <%= f.label :title %></br>
    <%= f.text_field :title %></br>
    <%= f.label :content %></br>
    <%= f.text_area :content, "v-model":"contentText"%></br>
    <%= f.submit "投稿する", name: "commit", class: "btn btn-success" %>
  <% end %>

  <div class="preview">
    <vue-markdown :source="contentText"></vue-markdown>
  </div>
</div>

<%= javascript_pack_tag 'content_vue' %>
