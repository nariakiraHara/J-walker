<h2>edit profile</h2>

<p><%= current_user.email %></p>

<%= form_for@user, :url => {:action => :update} do |f|  %>
  <%= f.label :comment %>
  <%= f.text_field :comment %>
  <%= f.fields_for :profile do |i| %>
    <%= i.label :birthday %>
    <%= i.text_field :birthday %>
    <%= i.label :want %>
    <%= i.text_field :want %>
  <% end %>
  <%= f.submit "Save",name:"commit" %>
<% end %>
